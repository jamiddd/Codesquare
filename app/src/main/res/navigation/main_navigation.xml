<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jamid.codesquare.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_createProjectFragment"
            app:destination="@id/createProjectFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_projectFragment"
            app:destination="@id/projectFragment" />
        <action
            android:id="@+id/action_homeFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_homeFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/createProjectFragment"
        android:name="com.jamid.codesquare.ui.CreateProjectFragment"
        android:label="@string/create_project"
        tools:layout="@layout/fragment_create_project" >
        <action
            android:id="@+id/action_createProjectFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jamid.codesquare.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.jamid.codesquare.ui.auth.CreateAccountFragment"
        tools:layout="@layout/fragment_create_account"
        android:label="CreateAccountFragment" >
        <action
            android:id="@+id/action_createAccountFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.jamid.codesquare.ui.LocationFragment"
        android:label="Add Location"
        tools:layout="@layout/fragment_location" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.jamid.codesquare.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_projectFragment"
            app:destination="@id/projectFragment" />
        <action
            android:id="@+id/action_profileFragment_to_projectRequestFragment"
            app:destination="@id/projectRequestFragment" />
        <action
            android:id="@+id/action_profileFragment_to_savedProjectsFragment"
            app:destination="@id/savedProjectsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_createProjectFragment"
            app:destination="@id/createProjectFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.jamid.codesquare.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/projectFragment"
        android:name="com.jamid.codesquare.ui.ProjectFragment"
        tools:layout="@layout/fragment_project"
        android:label="{title}" >
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="Project" />
        <action
            android:id="@+id/action_projectFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_projectFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
        <action
            android:id="@+id/action_projectFragment_to_projectContributorsFragment"
            app:destination="@id/projectContributorsFragment" />
        <action
            android:id="@+id/action_projectFragment_to_tagFragment"
            app:destination="@id/tagFragment" />
    </fragment>
    <fragment
        android:id="@+id/projectRequestFragment"
        android:name="com.jamid.codesquare.ui.profile.ProjectRequestFragment"
        android:label="Project Requests"
        tools:layout="@layout/fragment_pager" />
    <fragment
        android:id="@+id/savedProjectsFragment"
        android:name="com.jamid.codesquare.ui.profile.SavedProjectsFragment"
        tools:layout="@layout/fragment_pager"
        android:label="Saved projects" />
    <fragment
        android:id="@+id/commentsFragment"
        android:label="{title}"
        android:name="com.jamid.codesquare.ui.CommentsFragment"
        tools:layout="@layout/fragment_comments_container">

        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="Project" />
        <action
            android:id="@+id/action_commentsFragment_self"
            app:destination="@id/commentsFragment" />

    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.jamid.codesquare.ui.home.chat.ChatFragment"
        tools:layout="@layout/fragment_pager"
        android:label="{title}">

        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="Chat" />

        <action
            android:id="@+id/action_chatFragment_to_chatDetailFragment"
            app:destination="@id/chatDetailFragment" />
        <action
            android:id="@+id/action_chatFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_chatFragment_to_imageViewFragment"
            app:destination="@id/imageViewFragment" />

    </fragment>
    <fragment
        android:id="@+id/chatDetailFragment"
        android:name="com.jamid.codesquare.ui.home.chat.ChatDetailFragment"
        tools:layout="@layout/fragment_chat_detail"
        android:label="{title}" >

        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="Chat" />
        <action
            android:id="@+id/action_chatDetailFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_chatDetailFragment_to_chatMediaFragment"
            app:destination="@id/chatMediaFragment" />
        <action
            android:id="@+id/action_chatDetailFragment_to_imageViewFragment"
            app:destination="@id/imageViewFragment" />

    </fragment>
    <fragment
        android:id="@+id/chatMediaFragment"
        android:name="com.jamid.codesquare.ui.home.chat.ChatMediaFragment"
        android:label="Media"
        tools:layout="@layout/fragment_chat_media" >
        <action
            android:id="@+id/action_chatMediaFragment_to_imageViewFragment"
            app:destination="@id/imageViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/projectContributorsFragment"
        android:name="com.jamid.codesquare.ui.ProjectContributorsFragment"
        tools:layout="@layout/fragment_project_contributors"
        android:label="Contributors" >
        <action
            android:id="@+id/action_projectContributorsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/tagFragment"
        android:name="com.jamid.codesquare.ui.TagFragment"
        tools:layout="@layout/fragment_pager"
        android:label="{title}" >
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="Tag" />
    </fragment>
    <fragment
        android:id="@+id/imageViewFragment"
        android:name="com.jamid.codesquare.ui.ImageViewFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_image_view">
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.jamid.codesquare.ui.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
</navigation>