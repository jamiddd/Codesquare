<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/dark_pink</item>
        <item name="colorOnPrimary">@color/dark_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="chipStyle">@style/AppTheme.Chip</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
    </style>

    <style name="AppTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar.FullWidth">

    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="commitIcon">@drawable/ic_round_arrow_forward_24</item>
        <item name="android:commitIcon">@drawable/ic_round_arrow_forward_24</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:searchHintIcon">@null</item>
        <item name="goIcon">@drawable/ic_round_search_24</item>
        <item name="android:goIcon">@drawable/ic_round_search_24</item>
        <item name="background">@null</item>
        <item name="android:background">@null</item>
        <item name="queryBackground">@null</item>
        <item name="android:queryBackground">@null</item>
        <item name="submitBackground">@null</item>
        <item name="android:submitBackground">@null</item>
    </style>

    <style name="AppTheme.AppBar">
        <item name="background">@color/darkest_grey</item>
        <item name="android:background">@color/darkest_grey</item>
        <item name="backgroundTint">@color/darkest_grey</item>
        <item name="android:backgroundTint">@color/darkest_grey</item>
    </style>

    <style name="AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/AppTheme.Headline6</item>
        <item name="subtitleTextAppearance">@style/AppTheme.Subtitle1</item>
    </style>

    <style name="Theme.TabLayoutText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/title_semi</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">auto</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/Theme.TabLayoutText</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="AppTheme.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/title_semi</item>
        <item name="android:fontFamily">@font/title_semi</item>
    </style>

    <style name="AppTheme.TextAppearance.Button.TextButton" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/title_semi</item>
        <item name="android:fontFamily">@font/title_semi</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button</item>
        <item name="shapeAppearance">@style/AppTheme.SmallComponent</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Button.TextButton</item>
        <item name="shapeAppearance">@style/AppTheme.SmallComponent</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/title_semi</item>
        <item name="android:fontFamily">@font/title_semi</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="textAppearanceSubtitle1">@style/AppTheme.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.Normal" parent="">
        <item name="textAppearanceSubtitle1">@style/AppTheme.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>
    </style>

    <style name="AppTheme.SmallComponent.TextInputLayout" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppTheme.TextInputLayout.HintText" parent="TextAppearance.AppCompat.Caption">

    </style>

    <style name="AppTheme.Fragment">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/AppTheme.SmallComponent.TextInputLayout</item>
        <item name="hintTextAppearance">@style/AppTheme.TextInputLayout.HintText</item>
    </style>

    <style name="AppTheme.TextInputLayout.Normal" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.Normal</item>
        <item name="shapeAppearance">@style/AppTheme.SmallComponent.TextInputLayout</item>
        <item name="hintTextAppearance">@style/AppTheme.TextInputLayout.HintText</item>
    </style>

    <style name="AppTheme.Button.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="colorOnSurface">?colorPrimary</item>
        <item name="chipIconTint">?colorPrimary</item>
    </style>

    <style name="AppTheme.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
        <item name="android:textAppearance">@style/Chip.Text</item>
        <item name="checkedIconTint">?colorPrimary</item>
    </style>

    <style name="Chip.Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/title_semi</item>
        <item name="android:fontFamily">@font/title_semi</item>
    </style>

    <style name="AppTheme.PrimaryText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="AppTheme.Card.ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AppTheme.BottomSheet.Card" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/AppTheme.Card.ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">?colorPrimary</item>
        <item name="colorSurface">?colorSurface</item>
        <item name="colorOnSurface">?colorOnSurface</item>
    </style>
</resources>