<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout="@layout/sample_fragment_background">

    <PreferenceCategory app:key="subscription_category">
        <Preference
            android:id="@+id/subscription"
            app:key="subscription_setting"
            app:layout="@layout/subscription_setting_layout" />
    </PreferenceCategory>

    <PreferenceCategory app:key="admin_section" app:title="Admin">
        <Preference
            app:key="admin_add_interest"
            app:title="Add interest to Database" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Profile">

        <Preference
            app:key="profile_update"
            app:title="Update profile" />

        <Preference
            app:key="profile_saved"
            app:title="Saved projects" />

        <Preference
            app:key="profile_archived"
            app:title="Archived projects" />

        <Preference
            app:key="my_requests"
            app:title="My requests" />

        <Preference
            app:key="profile_sent_invites"
            app:title="Sent invites" />

        <Preference
            app:key="profile_blocked_accounts"
            app:title="Blocked accounts" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Location">

        <EditTextPreference
            app:key="location_radius"
            app:title="Radius of search"
            app:dialogTitle="Location radius"
            app:persistent="true"
            app:summary="10 KM"
            app:dialogMessage="Set radius for location based search." />

    </PreferenceCategory>

