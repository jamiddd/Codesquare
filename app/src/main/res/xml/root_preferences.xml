    <PreferenceCategory app:title="Account">

        <Preference
            app:key="account_update_password"
            app:title="Update password" />

        <Preference
            app:key="account_forgot_password"
            app:title="Forgot password" />


    </PreferenceCategory>

    <PreferenceCategory>

        <Preference
            app:key="feedback"
            app:title="Feedback" />

