<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Something simple -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

    </androidx.viewpager2.widget.ViewPager2>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="56dp"
        app:backgroundTint="?colorAccent"
        app:layout_anchor="@id/home_navigation_view"
        app:layout_anchorGravity="top|end"
        app:layout_behavior=".ui.SnackBarAwareBehavior"
        app:srcCompat="@drawable/ic_round_filter_list_24"
        app:tint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_navigation_view"
        style="@style/AppTheme.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:minHeight="50dp"
        app:itemIconSize="26dp"
        app:itemTextAppearanceActive="@style/AppTheme.BottomNavigationViewText"
        app:itemTextAppearanceInactive="@style/AppTheme.BottomNavigationViewText"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/new_home_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>