<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_extra"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingBottom="48dp">

    <TextView
        android:id="@+id/links_header"
        style="@style/AppTheme.ContentHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/links"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="170dp"
        tools:visibility="visible" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/post_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tags_header"
        style="@style/AppTheme.ContentHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tags"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp"
        tools:visibility="visible" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/post_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/contributors_header"
        style="@style/AppTheme.ContentHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="People"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_round_arrow_forward_24"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="223dp"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_contributors_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone"
        tools:itemCount="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="276dp"
        tools:listitem="@layout/user_vertical_item"
        tools:visibility="visible" />


</LinearLayout>